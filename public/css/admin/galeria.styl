@import "../style.styl"



#superior
	background: #fff8ce
	margin-bottom 2em
	font-size 16px
	#superior-interno
		max-width 942px
		margin auto
		padding-bottom 0.5em
		padding-top 0.5em
		padding-left 1em
		padding-right 1em
		h2
			display inline-block
		#controls
			display inline-block
			width 50%
			text-align right
			button
				display: inline-block;
				margin-right: 10%;
			#eliminar
				background #f93
				padding 5px
				border-radius 5px
				cursor pointer


	
.boton
	background url(/img/boton.png)
	background-size 100% 100%
	padding 0.5em
	font-size 1em
	color white
	z-index 50


#principal
	max-width 942px
	min-height 400px
	padding-left 1em
	padding-right 1em
	margin auto
	margin-top 2em
	padding-bottom 2em
	#galerias
		a
			margin-right 10px
			font-size 1.2em
			cursor pointer
		.ActiveGallery
			color #FF9933
			text-decoration underline
	.pagination
		float right
		list-style none
		color: #373435;
		li
			display inline-block
			color: #373435;
			margin-right 15px
			font-size 1.2em
			cursor pointer
		a
			color: #373435;
		.active
			color black
			font-size 1.5em

	#photos
		margin-top 1em
		li
			display inline-block
			margin-right 2%
			margin-bottom 2em
			width 23%
			overflow hidden
			height  150px
			position relative
			-webkit-box-shadow: 0px 0px 12px 0px rgba(50, 50, 50, 0.75);
			-moz-box-shadow:    0px 0px 12px 0px rgba(50, 50, 50, 0.75);
			box-shadow:         0px 0px 12px 0px rgba(50, 50, 50, 0.75);
			img
				margin-left: -8em;
				margin-top: -9em;

			&:nth-child(4n)
				margin-right 0
			.delete
				position absolute
				right 5px
				top 5px
				background white;
				padding 4px
				border-radius 3px
				padding-bottom 2px
				box-shadow:         0px 0px 12px 0px rgba(50, 50, 50, 0.75);
				-webkit-box-shadow: 0px 0px 12px 0px rgba(50, 50, 50, 0.75);
				cursor pointer
		#new
			text-align center
			background #fff8ce
			padding 1em
			box-sizing border-box
			cursor pointer
			span
				font-size 3em

					
					
	.ultimo
		margin-right 0
