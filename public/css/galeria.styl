@import "style.styl"



#superior
	background: #fff8ce
	margin-bottom 2em
	font-size 16px
	#superior-interno
		max-width 942px
		margin auto
		padding-bottom 0.5em
		padding-top 0.5em
		padding-left 1em
		padding-right 1em


#principal
	max-width 942px
	padding-left 1em
	padding-right 1em
	margin auto
	margin-top 2em
	padding-bottom 2em
	#galerias
		a
			margin-right 10px
			font-size 1.2em
			cursor pointer
		.ActiveGallery
			color #FF9933
			text-decoration underline
	.pagination
		float right
		list-style none
		color: #373435;
		li
			display inline-block
			color: #373435;
			margin-right 15px
			font-size 1.2em
			cursor pointer
		a
			color: #373435;
		.active
			color black
			font-size 1.5em

	#listaFotos
		li
			display inline-block
			margin-right 2%
			margin-bottom 2em
			width 31.5%
			figure
				display inline-block
				vertical-align top
				width 100%;
				margin 0
				padding 0
				position relative
				
				div
					width 100%
					overflow hidden
					position relative
					height 200px
					.cubierta
						position absolute
						background transparent
						top 0
						left 0
						width 100%
						height 100%
						transition all ease 0.3s
						box-sizing border-box
						cursor pointer
						&:hover
							border:inset 8px rgba(255,255,255,0.5);
							border-style:solid;
						
					img
						margin: 0;
						padding: 0;
						width: 242%;
						margin-left: -8em;
						margin-top: -9em;

			&:nth-child(3n)
				margin-right 0
					
					
	.ultimo
		margin-right 0
@media screen and (max-width:770px)
	.blockResponsive
		display block
		margin-top 0.5em
	.desaparece
		display none
	#superior-interno
		text-align  center

	#principal #listaFotos li:nth-child(2n+1)
		margin-right 2%
	
	#principal
		#galerias
			margin auto
		#listaFotos
			li
				width 48%
				&:nth-child(2n)
					margin-right 0
				
@media screen and (max-width:460px)
	#principal
		#galerias
			margin auto
		#listaFotos
			li
				width 100%
				margin-right 0

		
				




  		
