@import "style.styl"


#superior
	background: #fff8ce
	margin-bottom 0
	#superior-interno
		max-width 942px
		margin auto
		padding-bottom 0.5em
		padding-top 0.5em
		padding-left 1em
		padding-right 1em


#principal
	max-width 942px
	margin auto
	padding-left 1em
	padding-right 1em
	#mainPhoto
		max-width 942px;
		overflow hidden
		position relative
		padding-bottom 3em

		#innerPhoto
			width 100%
			z-index -1
			position relative
			overflow hidden
			height 370px
			box-shadow: 0 3px 5px rgba(0,0,0,0.2)
			img
				margin-top -21em	
		.nota
			position relative
			color white
			width 80%
			margin auto
			margin-top -3em
			&:before
				bottom: 10px;
				box-shadow: 0 5px 15px 3px rgba(0,0,0,1);
				content:"";
				left: 6px;
				position: absolute;
				-webkit-transform: rotate(-1deg);
				-moz-transform: rotate(-1deg);
				-ms-transform: rotate(-1deg);
				-o-transform: rotate(-1deg);
				transform: rotate(-1deg);
				width: 300px;
				z-index: -100;
			p
				width 70%
			button
				width 30%
				margin 0
				padding 0.3em
				font-size 1.2em
				font-weight normal
		#servilletero
			position absolute
			right -0.7em
			bottom 19px
			width: 340px;
			
			
               

	#fotos
		width 500px
		margin-top 0.5em
		margin-bottom 2em

		
		figure
			display inline-block
			vertical-align top
			margin 0
			padding 0
			width 47.4%
			overflow hidden
			height 126px
			margin-bottom 1em
			box-shadow: 0 6px 5px rgba(0,0,0,0.2);
			cursor pointer
			border-radius 5px
			img
				height 101%
		figure:nth-child(2n+1)
			margin-right 1em
	figure
		display inline-block
		vertical-align top
		
		width 31.6%
		margin 0
		padding 0
		margin-right 2%
		margin-bottom 2em
		box-shadow: 0 6px 5px rgba(0,0,0,0.2);
		overflow hidden

		figcaption 
			background white
			padding 5px
			padding-left 1em
			box-sizing border-box
		div
			width 100%
			overflow hidden
			position relative
			height 200px
			.cubierta
				position absolute
				background transparent
				top 0
				left 0
				width 100%
				height 100%
				transition all ease 0.3s
				box-sizing border-box
				cursor pointer
				&:hover
					border:inset 8px rgba(255,255,255,0.5);
					border-style:solid;
				
			img
				margin: 0;
				padding: 0;
				width: 200%;
				margin-left: -7em;
				margin-top: -6em;
					
					
	.ultimo
		margin-right 0

#menuPhoto
	max-width 600px
	overflow hidden
	height 200px;
	margin auto
	z-index 2
	position relative
	img
		margin-left: -5em;
		margin-top: -8em;
#menuDescription
	
	width 90%
	margin auto
	margin-top -2em
	font-size 1em
	display block
	z-index 9999
	position relative
	font-size 16px
	color white
	margin-bottom 1em


@media screen and (max-width:770px)

	#principal
		figure
			width 48%
			margin-right 2%
		figure:nth-child(2n)
			margin-right 0
		figure:nth-child(2n+1)
			margin-right 2%
		#mainPhoto
			#innerPhoto
				height 250px
				img
					margin-left -10%
				.nota
					width 90%
					p
						width 78%
					
			#servilletero
				width 220px
	.blockResponsive
		display block
		margin-top 0.5em
	.desaparece
		display none
	#superior-interno
		text-align  center
@media screen and (max-width:615px)
	#principal
		#mainPhoto
			#innerPhoto
				img
					margin-left -80%
		figure
			width 100%
			div 
				img
					margin-left: -12em;
					margin-top: -14em;
		figure:nth-child(2n)
			margin-right 0
		figure:nth-child(2n+1)
			margin-right 0%


@media screen and (max-width:460px)
	#principal
		#mainPhoto
			#innerPhoto
				height 150px
				img
					width 402%
					margin-left -150%
					margin-top -146%
					
			.nota
				margin-top 1em
				width 100%
				p
					width 100%
				button 
					width auto
			#servilletero
				display none
	#principal figure div img 
		margin-left: -8em;
		margin-top: -6em;


  		
