@import "style.styl"


#superior
	background: #fff8ce
	#superior-interno
		max-width 942px
		margin auto
		padding-bottom 0.5em
		padding-top 0.5em
		padding-left 1em
		padding-right 1em


#principal
	max-width 942px
	margin auto
	min-heigth 400px
	margin-bottom 2em
	padding-left 1em
	padding-right 1em
	#foto
		overflow hidden
		height 350px
		position relative
		width 95%
		img
			margin-top: -20%;
			margin-left: -36%;
			width 170%
		#divisor
			position absolute
			width 100%
			height 100%
			top 0
			font-size 0
			#uno,#dos,#tres,#cuaro
				display inline-block
				height 50%
				box-sizing border-box
			#uno,#cuatro
				width 70%
			#dos,#tres
				width 30%

			#uno,#dos
				border-bottom solid 4px #f5eedb
			#dos
				border-left solid 4px #f5eedb
			#tres
				border-right solid 4px #f5eedb
	#content
		width 95%;
		position relative
		margin-top -32px
		margin-left 5%
		.aparece
			display none
		article
			display inline-block
			vertical-align top
			width 70%
			button
				font-size 1.2em
				padding 0.5em
				margin 0
				width 40%
		ul
			display inline-block
			vertical-align top
			width 29%
			position relative
			li
				width 100%
				height 100px
				margin-bottom 1em
				position relative
				z-index 3
				cursor pointer
				div
					overflow hidden
					height 100px
					img
						width: 300%;
						margin-left: -110%;
						margin-top: -38%;
				


@media screen and (max-width:770px)
	.blockResponsive
		display block
		margin-top 0.5em
	.desaparece
		display none
	#superior-interno
		text-align  center
	#principal
		#foto
			height 250px
		#content
			article
				width 100%
			.aparece
				width 100%
				display block
				li
					width 31%
					margin-right 1%
					display inline-block
					cursor pointer

				li:nth-child(3n)
					margin-right 0
			.desaparece 
				display none

@media screen and (max-width:600px)
	#principal
		#foto
			height 150px
			width 100%
			img
				width 200%

		#content
			width 100%
			margin-top 1em
			margin-left 0
	#principal #content ul li div img
		width 400%
		height auto
		margin 0
		margin-left -50%
		margin-top -10%
	#principal #content article button
		width 100%






			

				
			


  		
