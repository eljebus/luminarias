@import "style.styl"



#container
	width 100%
	box-sizing border-box
	
	#container-foto
		width 100%
		height 455px
		background url('../img/bg.png')
		background-size 100% 
		z-index 2


		#foto
			background white
			max-width 942px
			height 100%
			position relative
			margin auto
			img
				width 950px
				margin-top -6.5em
			&:after
				content:"";
				box-shadow: 0 5px 5px 2px rgba(0,0,0,0.5);
				border-radius: 50%;
				bottom:2px;
				height: 15px;
				position: absolute;
				width: 100%;
				z-index: -1;
               

	#main-containter
		max-width 942px
		margin auto

		button
			background-color #CC3300
			padding 0.6em
			background url(../img/boton.png)
			font-family: 'Amaranth', sans-serif;
			font-size 1.3em
			background-size 100% 100%
			margin auto
			display block
			border none
			color white
			margin-top -1.2em
			border-radius: 9px;
			text-shadow: 0px 1px 0px rgba(0, 0, 0, 1);
			cursor pointer
			z-index 1000
			position relative
			box-shadow: 0px 3px 3px 0px rgba(50,50,50,0.4)


		#servicios
			width 90%
			margin auto
			margin-top 2.5em
			padding-top 1em
			a
				display inline-block
				width 45%
				margin-right 9%
				margin-bottom 2.5em
				box-shadow: 0 6px 7px rgba(0,0,0,0.09);
				
				figure
					padding 0
					margin 0
					transition all ease 0.3s
					div
						height 240px
						overflow hidden
						transition all ease 0.3s
						position relative

						img
							width 100%
							cursor pointer
						
					.cubierta
						width 100%
						height 100%
						box-sizing border-box
						position absolute
						background trasparent
						transition all ease 0.3s
						cursor pointer
						&:hover
							border:inset 8px rgba(255,255,255,0.5);
							border-style:solid;

					figcaption
						background white
						margin-top: -3px;
						padding 5px
						padding-left 1em
						box-sizing border-box
			
								
			a:nth-child(2n)
				margin 0
				margin-bottom 2em





@media screen and (max-width:1345px)
	#container 
		#main-containter 
			#servicios
				width: 100%;

@media screen and (max-width:1180px)
	#container
		overflow hidden
		#container-foto
			height 350px
			overflow hidden
			#foto
				width 800px 
		#main-containter
			max-width 800px
			#servicios
				width: 100%;
	#container #container-foto #foto
		width 800px			
	#container #container-foto #foto img
		width 800px
@media screen and (max-width:915px)
	#container #main-containter
		max-width 700px
		#servicios
			width: 100%;
	#container 
		overflow hidden
		#container-foto
			background-size 120%  
			#foto
				width 700px

		#main-containter 
			#servicios 
				a:nth-child(2n+1)
					margin-right 2%
				a
					width 48.4%
					figure div
						height: 228px
						overflow hidden

@media screen and (max-width:770px)
	#container 
		overflow hidden
		#main-containter
			max-width 420px
			#servicios 
				a
					width 100%
					margin-right 0

		#container-foto
			width 100%
			max-height 300px
			#foto
				width 100%

@media screen and (max-width:580px)
	#container #container-foto #foto img
		width 580px
		margin-top -2em
	.skitter-square .prev_button,
	.box_skitter .next_button 
		top 2em
		width 45px
		height 45px
		right 35
		opacity 0.7

@media screen and (max-width:460px)

	#container #main-containter
		padding-left 1em
		padding-right 1em

		box-sizing border-box
	#container #container-foto #foto img
		width 460px
		margin-top 0em
	.box_skitter .label_skitter
		opacity 0
	#container #main-containter #servicios li figure div
		height auto

@media screen and (max-width:320px)
	#container #container-foto #foto img
		width 320px
	#container #container-foto
		width 100%
		max-height 200px
	#container #main-containter button
		font-size 18px
	#footer-container li
		font-size 1em

		


		


