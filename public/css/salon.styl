@import "style.styl"


#superior
	background: #fff8ce
	#superior-interno
		max-width 942px
		margin auto
		padding-bottom 0.5em
		padding-top 0.5em


#principal
	max-width 942px
	margin auto
	min-heigth 400px
	margin-bottom 2em
	#foto
		overflow hidden
		height 350px
		position relative
		width 95%
		margin-left 5%
		img
			margin-top: -11em;
			margin-left: -14em;
		#divisor
			position absolute
			width 100%
			height 100%
			top 0
			font-size 0
			#uno,#dos,#tres,#cuaro
				display inline-block
				height 50%
				box-sizing border-box
			#uno,#cuatro
				width 70%
			#dos,#tres
				width 30%

			#uno,#dos
				border-bottom solid 4px #f5eedb
			#dos
				border-left solid 4px #f5eedb
			#tres
				border-right solid 4px #f5eedb
	#content
		width 95%;
		position relative
		margin-top -32px
		
		article
			display inline-block
			vertical-align top
			width 70%
			button
				font-size 1.2em
				padding 0.5em
				margin 0
				width 40%
		ul
			display inline-block
			vertical-align top
			width 29%
			position relative
			li
				width 100%
				height 100px
				margin-bottom 1em
				position relative
				z-index 3
				div
					overflow hidden
					height 100px
					img
						width: 300%;
						margin-left: -10em;
						margin-top: -10em;


			

				
			


  		
